locale_pt() {
cd $PKG
bsdtar -cf \
$PKGMK_PACKAGE_DIR/${name}.pt${PKGMK_BUILDVER}any.$PKGMK_PACKAGE_EXT \
usr/share/help/pt_BR usr/share/help/pt

rm -r usr/share/help/pt
rm -r usr/share/help/pt_BR

}
locale_ro() {
pack_remove_locale ro
}
locale_ru() {
