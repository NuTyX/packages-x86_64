}
locale_sl() {
pack_remove_locale sl
}
locale_sr() {
cd $PKG
bsdtar -cf \
$PKGMK_PACKAGE_DIR/${name}.sr${PKGMK_BUILDVER}any.$PKGMK_PACKAGE_EXT \
usr/share/help/sr \
usr/share/help/sr@latin

rm -r usr/share/help/sr
rm -r usr/share/help/sr@latin
}
