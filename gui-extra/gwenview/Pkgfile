description="Fast and easy to use image viewer for KDE 5"
url="https://apps.kde.org/gwenview/"

packager="spiky <spiky@nutyx.org>"
contributors="Pierre B, tnut, fabienwang"

makedepends=(phonon-qt kitemmodels kio kactivities kdelibs4support libjpeg-turbo
             libpng exiv2 lcms2 baloo hicolor-icon-theme libkdcraw libkipi kimageformats)

set=(kde5)

name=gwenview
version=21.08.3

source=(https://download.kde.org/stable/release-service/$version/src/$name-$version.tar.xz)

build() {
cd $name-$version
mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release  \
      -DKDE_INSTALL_LIBDIR=lib    \
      -DGWENVIEW_SEMANTICINFO_BACKEND="Baloo" \
      -DBUILD_TESTING=OFF         \
      -Wno-dev ..
make
make DESTDIR=$PKG install
}

uptodate() {
feed=https://github.com/KDE/$name/releases.atom 
exec="lynx -read_timeout=20 -dump -listonly -nonumbers $feed"
ligne=1 # nombre de notification ? afficher
$exec $feed | grep title | \
sed "s@<title>@@" | \
sed "s@</title>@@" | \
sed "s@v@@" | sed "s@ @@g" | \
head -n $(($ligne+1 )) | \
tail -n $(($ligne))
}
