# Description: A program that lets you manipulate digital audio waveforms
# URL: http://web.audacityteam.org/
# Packager: Chris Farrell, timcowchip at gmail dot com
# Maintainer: Chris Farrell, timcowchip at gmail dot com
# Depends on: git libvorbis libmad libid3tag wxgtk lame hicolor-icon-theme ffmpeg shared-mime-info desktop-file-utils redland jack soundtouch cmake zip python2 

name=audacity
version=2.1.2
release=1
source=('ffmpeg.patch')
build() {
  git clone https://github.com/audacity/audacity.git
  
  cd "${SRC}/${name}"
  patch -p1 -i "${SRC}/ffmpeg.patch"
  
  WX_CONFIG=/usr/bin/wx-config \
  ./configure --prefix=/usr --enable-unicode --disable-vamp --with-wx-config=$WX_CONFIG --with-libsamplerate

  make
 
  make DESTDIR="${PKG}" install
}
