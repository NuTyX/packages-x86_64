# Depends on: gtk3 python2-gobject dbus-python python2-cairo mutagen gstreamer1-plugins-base gstreamer1-plugins-good gstreamer1-plugins-ugly

PKGMK_KEEP_SOURCES="no"

description="A python2 audio library tagger, manager and player"
url="https://github.com/quodlibet/quodlibet"
packager="tnut at nutyx dot org"
name=quodlibet
version=3.8.1
release=1
run=(python2-gobject dbus-python python2-cairo python2-gobject gstreamer1-plugins-base gstreamer1-plugins-good gstreamer1-plugins-ugly )
source=(https://github.com/quodlibet/quodlibet/archive/release-$version.tar.gz)

build() {
  cd $name-release-$version/$name
  python2 setup.py build
  python2 setup.py install --root=$PKG
}
