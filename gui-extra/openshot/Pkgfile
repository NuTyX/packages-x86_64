# Depends on: python-sip-qt5 python-pillow python-zmq python-requests python-setuptools qtbase qtx11extras qtwebkit qttools qtsvg mlt sdl sdl-image librsvg mplayer sox ladspa python-qt libopenshot

description="an open-source, non-linear video editor for Linux based on MLT framework"
url="http://www.openshotvideo.com"
packager="rems <rems@nutyx.org>"
contributors="tnut"

name=openshot
version=2.4.3
release=2

run=( python-setuptools python-qt python-sip python-sip-pyqt5 python-pillow python-zmq python-requests libopenshot )
PKGMK_KEEP_SOURCES="no"

source=(https://github.com/OpenShot/openshot-qt/archive/v$version.tar.gz)

build() {

	cd openshot-qt-$version
	python3 setup.py install --root=$PKG/ --optimize=1
}
