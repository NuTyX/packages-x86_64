# Depends on: openbox startup-notification gtk2 cairo xorg-pixman xorg-libxext gdk-pixbuf atk libglade avahi dbus-python dbus-glib libdaemon mesa

description="Tools for openbox configuration"
url="http://openbox.org/wiki/ObConf:About"
packager="tnut at nutyx dot org"
name=obconf
version=2.0.4
release=3

source=(http://icculus.org/openbox/obconf/$name-$version.tar.gz)

build() {
   cd $name-$version
   ./configure --prefix=/usr
   make
   make DESTDIR=$PKG install
}
