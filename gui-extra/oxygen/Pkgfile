description='KDE Oxyen style'
url='https://kde.org/plasma-desktop/'

license="LGPL-2.0-or-later"

packager="spiky <spiky@nutyx.org>"
contributors="Tnut"

set=(kde6)

name=oxygen
version=6.0.4

makedepends=(libxcb qt6-base qt6-declarative extra-cmake-modules libplasma
              kcmutils kcolorscheme kcompletion kconfig kconfigwidgets
              kcoreaddons kdecoration kguiaddons ki18n kwidgetsaddons
              kwindowsystem frameworkintegration)

source=(https://download.kde.org/stable/plasma/$version/$name-$version.tar.xz)

build() {
 mkdir build
 cd    build
 cmake -DCMAKE_INSTALL_PREFIX=/usr \
       -DBUILD_TESTING=OFF         \
       -DBUILD_QT5=OFF             \
       ../$name-$version
  
 make
 make DESTDIR=$PKG install
}
