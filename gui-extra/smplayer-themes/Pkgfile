# Depends on: smplayer libpng optipng

description="Themes for SMPlayer"
url="http://smplayer.sourceforge.net/"
packager="rems<rems@nutyx.org>"
contributors="Greg"

run=(optipng)

name=smplayer-themes
version=18.6.0
release=1


source=(https://downloads.sourceforge.net/smplayer/${name}-${version}.tar.bz2)

prepare() {
  cd ${name}-${version}
# Fix invalid PNG icons to work with libpng 1.6
  find -name '*.png' -exec optipng -quiet -force -fix {} +
}


build() {

    cd ${name}-${version}
	make PREFIX=/usr
}


package() {

  cd ${name}-${version}
  make DESTDIR=$PKG PREFIX=/usr install

}

 
