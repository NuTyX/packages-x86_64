description="Modern file manager for Xfce"
url="http://thunar.xfce.org"

packager="Tnut <tnut@nutyx.org>"
contributors="Tyrry,Greg,Rems,Fabienwang,Spiky"

makedepends=(libnotify libexif exo libxfce4ui xfce4-panel
             gvfs libpng libgudev libxfce4util)
run=(desktop-file-utils gtk-update-icon-cache
     lxde-icon-theme)
set=(xfce4)

name=thunar
version=4.18.1

source=(http://archive.xfce.org/src/xfce/thunar/${version:0:4}/$name-$version.tar.bz2)

build() {

cd $name-$version

./configure --prefix=/usr \
--sysconfdir=/etc \
--docdir=/usr/share/doc/$name-$version
make
make DESTDIR=$PKG install
}
