description="The Dolphin version control plugin library"
url="https://www.kde.org/"

packager="spiky <spiky@nutyx.org>"
contributors="Pierre,Fabienwang,Tnut"

makedepends=(extra-cmake-modules kxmlgui ki18n kio
             kdelibs4support ktexteditor kparts dolphin)

set=(kde5)

name=dolphin-plugins
version=21.12.2

source=(https://download.kde.org/stable/release-service/$version/src/$name-$version.tar.xz)

build=kde5

uptodate() {
feed=https://github.com/KDE/$name/releases.atom 
exec="lynx -read_timeout=20 -dump -listonly -nonumbers $feed"
ligne=1 # nombre de notification ? afficher
$exec $feed | grep title | \
sed "s@<title>@@" | sed "s@</title>@@" | \
sed "s@v@@" | sed "s@ @@g" | \
head -n $(($ligne+1 )) | \
tail -n $(($ligne))
}
