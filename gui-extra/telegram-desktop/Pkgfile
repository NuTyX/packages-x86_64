description="Messaging app with a focus on speed and security, itâ€™s super-fast, simple and free."
url="https://telegram.org/"

packager="tnut <tnut@nutyx.org>"
contributors="Fanch,Fabienwang,Spiki,Spiky"

makedepends=(cmake ninja python ffmpeg glibmm kwayland rnnoise tg_owt tl-expected
             jemalloc abseil-cpp extra-cmake-modules gtk3 webkitgtk libdbusmenu-qt)

run=(desktop-file-utils ttf-opensans qt6-imageformats qt6-5compat
     qt6-svg qt6-wayland)

alias=(telegram)

name=telegram-desktop
version=4.2.4

source=(https://github.com/telegramdesktop/tdesktop/releases/download/v${version}/tdesktop-$version-full.tar.gz)

build() {

  export QT_DIR=/usr/lib/cmake/Qt6

  cd tdesktop-$version-full

  export CXXFLAGS+=" -Wp,-U_GLIBCXX_ASSERTIONS"

  cmake -B build -G Ninja \
	-DQT_DIR="/usr/lib/cmake/Qt6" \
	-DTDESKTOP_API_ID=611335 \
	-DTDESKTOP_API_HASH=d524b414d21f4d37f08684c1df41ac9c \
	-DCMAKE_INSTALL_PREFIX="/usr" \
        -DCMAKE_BUILD_TYPE=Release
  ninja -C build
  DESTDIR=$PKG ninja -C build install
}
