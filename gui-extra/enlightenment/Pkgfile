# Description: Enlightenment window manager.
# URL: http://www.enlightenment.org/
# Packager: berlius at nutyx dot com
# Depends on: elementary evas_generic_loaders xcb-util-keysyms terminology

name=enlightenment
version=0.19.13
release=1
source=(http://download.enlightenment.org/rel/apps/enlightenment/$name-$version.tar.gz)

build()
{
    cd $name-$version
    
    patch -p1 -i ../../../enlightenment.patch
    
    ./configure --prefix=/usr \
                --disable-mount-udisks
                
    make
    make DESTDIR=$PKG install
    
}
