#Depends on: intltool python2 geoclue2 xorg-libdrm libxcb xorg-libxxf86vm python2-gobject librsvg python2-xdg gtk3

packager="Greg"
contributors="Tnut, Pierre B., Remy, Fanch, Jayce"

description="Adjusts the color temperature of your screen according to your surroundings."
url="http://jonls.dk/redshift/"

name=redshift
version=1.12

run=(geoclue2)

source=(https://github.com/jonls/redshift/releases/download/v$version/$name-$version.tar.xz)

build(){
  cd $name-$version

  ./configure --prefix=/usr --enable-drm --enable-randr --enable-vidmode --enable-geoclue2
  make
}

package() {
  cd $name-$version
  make DESTDIR=$PKG install
}
