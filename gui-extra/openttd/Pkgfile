description="An engine for running Transport Tycoon Deluxe."
url="http://www.openttd.org"

maintainers="tsgeek at mailoo dot org"
contributors="Remy"
packager="tnut <tnut@nutyx.org>"

makedepends=(libpng sdl1 icu xorg-fontconfig lzo
             xz openttd-opengfx openttd-opensfx)
run=(desktop-file-utils hicolor-icon-theme)


name=openttd
version=1.10.3

source=(https://proxy.binaries.openttd.org/openttd-releases/${version}/${name}-${version}-source.tar.xz)

build() {
  cd $name-$version

CXXFLAGS+=' -DU_USING_ICU_NAMESPACE=1'

 ./configure \
    --prefix-dir=/usr \
    --binary-name=$name \
    --binary-dir=bin \
    --data-dir=share/$name \
    --install-dir=$PKG \
    --doc-dir=share/doc/$name \
    --menu-name="OpenTTD" \
    --personal-dir=.${name}    

make
make DESTDIR=$PKG install
}
