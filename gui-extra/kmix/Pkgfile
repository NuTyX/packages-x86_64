description="KDE volume control program"
url="https://apps.kde.org/kmix/"

packager="spiky <spiky@nutyx.org>"
contributors="Pierre,Fabienwang,Tnut"

makedepends=(alsa-lib pulseaudio libcanberra extra-cmake-modules
             plasma-framework kdelibs4support kdoctools)

set=(kde5)

name=kmix
version=21.12.2

source=(https://download.kde.org/stable/release-service/$version/src/$name-$version.tar.xz)

build() {
cd kmix-$version

mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release  \
      -DKDE_INSTALL_LIBDIR=lib    \
      -DKMIX_KF5_BUILD=ON         \
      -DBUILD_TESTING=OFF         \
      -Wno-dev ..
make
make DESTDIR=$PKG install
}

uptodate() {
feed=https://github.com/KDE/$name/releases.atom 
exec="lynx -read_timeout=20 -dump -listonly -nonumbers $feed"
ligne=1 # nombre de notification ? afficher
$exec $feed | grep title | \
sed "s@<title>@@" | \
sed "s@</title>@@" | \
sed "s@v@@" | sed "s@ @@g" | \
head -n $(($ligne+1 )) | \
tail -n $(($ligne))
}
