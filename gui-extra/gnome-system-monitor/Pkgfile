description="A system monitor for GNOME"
url="http://library.gnome.org/users/gnome-system-monitor/"

license="GPL2"

packager="spiky <spiky@nutyx.org>"
contributors="Tnut,Jayce,Remy,Fanch,Tnut"

makedepends=(meson adwaita-icon-theme itstool gtkmm4
             libgtop libwnck librsvg gnome-icon-theme)
run=(gsettings-desktop-schemas desktop-file-utils libhandy libadwaita)

set=(gnome)

name=gnome-system-monitor
version=46.0
release=2

source=(http://download.gnome.org/sources/$name/${version:0:2}/$name-$version.tar.xz)

build() {
cd $name-$version

mkdir build
cd build

meson setup .. \
      --prefix=/usr \
      -Dsystemd=false

ninja
DESTDIR=$PKG ninja install

install -Dm644 ../COPYING $PKG/usr/share/licenses/$name/COPYING
}
