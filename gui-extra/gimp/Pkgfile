# Depends on: shared-mime-info gtk2 python2-gtk curl libexif xorg-libxmu xorg-libxpm openexr gegl poppler-glib glib-networking libmng alsa-lib babl libmypaint mypaint-brushes lcms2 libgexiv2 harfbuzz libjpeg-turbo librsvg libtiff libxml2

description="GNU Image Manipulation Program"
url="http://www.gimp.org/"
contributors="Pierre B., Greg"
packager="tnut <tnut@nutyx.org>"

name=gimp
version=2.10.4
release=2

run=(python2-gtk)

source=(http://download.gimp.org/pub/gimp/v2.10/gimp-$version.tar.bz2)


build() {

cd $name-$version


./configure --prefix=/usr --sysconfdir=/etc
make

make DESTDIR=$PKG install

}
