# Depends on: geany

description="Many plugins for geany"
url="http://plugins.geany.org/"
contributors="tnut"
packager="greg <greg@nutyx.org>"


name=geany-plugins
version=1.31
release=1

source=(http://plugins.geany.org/geany-plugins/$name-$version.tar.bz2)

build() {

cd $name-$version
./configure --prefix=/usr
make

make DESTDIR=$PKG install

}
