description="A powerful text editor for MATE"
url="https://mate-desktop.org/"

packager="spiky <spiky@nutyx.org>"
contributors="Fanch,Jayce,Greg,Remy,Tnut"

makedepends=(enchant gtk3 libsoup gtksourceview4 libpeas gobject-introspection )
run=(mate-desktop python-gobject iso-codes)

set=(mate)

name=pluma
version=1.28.0


source=(https://pub.mate-desktop.org/releases/${version%.*}/$name-$version.tar.xz)
prepare() {
rm -r $name-$version/help/ru
}
build() {

  cd $name-$version
  ./configure \
          --prefix=/usr \
          --libexecdir=/usr/lib/${name} \
          --with-gtk=3.0 \
          --enable-gtk-doc=no \
          --enable-python

  make
  sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
  make DESTDIR=$PKG install

  rm $PKG/usr/lib/pluma/plugins/*.la
}

uptodate() {
feed=https://github.com/mate-desktop/$name/releases.atom
exec="lynx -read_timeout=20 -dump -listonly -nonumbers $feed"
$exec $feed | grep release | grep title | head -1 | \
sed -e "s@ @@g" -e "s@<title>$name@@" -e "s@release</title>@@"
}
