# Depends on: gtk2 nss xorg-libxtst gconf xorg-libx11 freetype freefont-ttf desktop-file-utils shared-mime-info alsa-lib hicolor-icon-theme

description="An advanced browser made with the power user in mind."
url="https://vivaldi.com"
packager="SipoMatadorduCosmos"

name=vivaldi
version=1.9.818.50
release=1
run=(gtk2 nss xorg-libxtst gconf xorg-libx11 freetype freefont-ttf desktop-file-utils shared-mime-info alsa-lib hicolor-icon-theme)


source=(https://downloads.vivaldi.com/stable/vivaldi-stable-$version-1.x86_64.rpm)


build() {
  cp -a {opt,usr} $PKG

    # suid sandbox
    chmod 4755 $PKG/opt/vivaldi/vivaldi-sandbox

    binf=$PKG/usr/bin/vivaldi-stable
    if [[ ! -e $binf ]] && [[ ! -f $binf ]] && [[ ! -L $binf ]]; then
        install -dm755 $PKG/usr/bin
        ln -s /opt/vivaldi/vivaldi $binf
    fi

    # install icons
    for res in 16 22 24 32 48 64 128 256; do
        install -Dm644 $PKG/opt/vivaldi/product_logo_${res}.png \
            $PKG/usr/share/icons/hicolor/${res}x${res}/apps/vivaldi.png
    done

}
