# Depends on: qtsvg extra-cmake-modules kconfig kcrash ki18n kjobwidgets kio kparts ktexteditor kwindowsystem kxmlgui kiconthemes kactivities kdoctools plasma-framework knewstuff threadweaver kitemmodels kded hicolor-icon-theme

description="Text editor of KDE"
url="https://www.kde.org/"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

name=kate
version=18.12.3

source=(http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz)

build=kde5

uptodate() {
feed=https://github.com/KDE/$name/releases.atom 
exec="lynx -read_timeout=20 -dump -listonly -nonumbers $feed"
ligne=1 # nombre de notification ? afficher
$exec $feed | grep title | \
sed "s@<title>@@" | \
sed "s@</title>@@" | \
sed "s@v@@" | sed "s@ @@g" | \
head -n $(($ligne+1 )) | \
tail -n $(($ligne))
}
