description="Parallel implementation of the gzip file compressor"
url="http://www.zlib.net/pigz/"
packager="greg<greg@nutyx.org>"

# Depends on: zlib

name=pigz
version=2.3.4
release=1

source=(http://www.zlib.net/$name/$name-$version.tar.gz)


build() {

  cd $name-$version

  make
  
}

package() {

  cd $name-$version

  install -Dm755 $SRC/$name-$version/$name \
    $PKG/usr/bin/$name 

  pushd $PKG/usr/bin
    ln -s pigz unpigz 
  popd

  install -Dm644 $SRC/$name-$version/$name.1 \
    $PKG/usr/share/man/man1/$name.1
  install -Dm644 $SRC/$name-$version/$name.pdf \
    $PKG/usr/share/doc/$name/$name.pdf
  install -Dm644 $SRC/$name-$version/README \
    $PKG/usr/share/licenses/$name/README
    
}
