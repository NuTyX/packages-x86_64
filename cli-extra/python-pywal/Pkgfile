description='Generate and change colorscheme on the fly'
url='https://github.com/dylanaraps/pywal'

packager="Lomig <lomigandtux@proton.me>"

makedepends=(python)
run=()
set=()

name=python-pywal
version=3.3.0

source=(${url}/archive/${version}.tar.gz)

build() {
cd pywal-$version
python setup.py install --prefix=/usr --root=$PKG --optimize=1
}
