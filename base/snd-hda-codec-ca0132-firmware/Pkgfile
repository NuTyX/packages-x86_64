description="snd-hda-codec-ca0132 - Creative Sound Core3D codec"
url='https://git.kernel.org/?p=linux/kernel/git/firmware/linux-firmware.git;a=summary'

packager="tnut <tnut@nutyx.org>"
contributors="Spiky"

license="Custom"

set=(linux-firmware)

name=snd-hda-codec-ca0132-firmware
version=20240410

makedepends=(rdfind)
source=(WHENCE
        https://git.kernel.org/pub/scm/linux/kernel/git/firmware/linux-firmware.git/snapshot/linux-firmware-$version.tar.gz)

build() {

cd linux-firmware-$version
cp ../WHENCE .
make DESTDIR=$PKG FIRMWAREDIR=/lib/firmware install

install -Dt $PKG/usr/share/licenses/$name -m644 WHENCE
install -Dt $PKG/usr/share/licenses/$name -m644 LICENCE.ca0132
}
