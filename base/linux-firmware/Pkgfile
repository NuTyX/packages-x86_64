# Depends on: git

description="The linux kernel firmware set of files. More and more hardware requires this package"
packager="tnut <tnut@nutyx.org>"

name=linux-firmware
version=20181026
unset MAKEFLAGS

build() {
git clone git://git.kernel.org/pub/scm/linux/kernel/git/firmware/linux-firmware.git \
firmware
find firmware -name '*.c' \
-or -name '*.h' \
-or -name '*.asm' \
-or -name 'Makefile' \
-or -name 'configure' \
-or -name '*.S' \
-or -name "README" \
-or -name '*.pl' \
-or -name '*.pst' \
-or -name '*.txt' -delete
find firmware \( -type d -and -empty \) -delete
rm -rf firmware/cis/src
rm -rf firmware/usbdux
rm -rf firmware/carl9170fw
rm -rf firmware/.git
mkdir $PKG/lib
cp -a firmware \
$PKG/lib

}
