description='Redundant data find - a program that finds duplicate files'
url='https://github.com/pauldreik/rdfind'

license="GPL2"

packager="spiky <spiky@nutyx.org>"
contributors=""

makedepends=(automake nettle)

name=rdfind
version=1.6.0
PKGMK_KEEP_SOURCES="no"

source=(https://github.com/pauldreik/rdfind/archive/refs/tags/releases/$version.tar.gz)

prepare() {
mv $name-releases-$version $name-$version
}

build() {
cd $name-$version

./bootstrap.sh
./configure --prefix=/usr
make
make DESTDIR=$PKG install

install -Dm644 COPYING $PKG/usr/share/licenses/$name/COPYING
}
