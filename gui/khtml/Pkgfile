description="KHTML APIs "
url="https://www.kde.org/"
packager="spiky <spiky@nutyx.org>"
contributors="Pierre B, tnut, fabienwang"

name=khtml
version=5.81.0
release=2

makedepends=(karchive kcodecs kglobalaccel ki18n kiconthemes kio
             kjs knotifications kparts sonnet ktextwidgets kwallet
             kwidgetsaddons kwindowsystem kxmlgui giflib
             libjpeg-turbo libpng openssl)
source=(https://download.kde.org/stable/frameworks/${version%.*}/portingAids/$name-$version.tar.xz)

build=kde5

uptodate() {
feed=https://github.com/KDE/$name/releases.atom 
exec="lynx -read_timeout=20 -dump -listonly -nonumbers $feed"
ligne=1 # nombre de notification ? afficher
$exec $feed | grep title | \
sed "s@<title>@@" | \
sed "s@</title>@@" | \
sed "s@v@@" | \
head -n $(($ligne+1 )) | \
tail -n $(($ligne))
}
