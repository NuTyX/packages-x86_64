# Depends on: lzo libpng glib xorg-pixman xorg-fontconfig xcb-util xorg-libxrender xorg-libxxf86vm

description="Cairo is a 2D graphics library with support for multiple output devices."
url="http://www.cairographics.org/"
packager="rems <rems@nutyx.org>"
contributors="Pierre B,tnut"

name=cairo
version=1.14.12
release=2

source=( http://cairographics.org/releases/$name-$version.tar.xz)

build() {
cd $name-$version
./configure --prefix=/usr \
            --disable-static \
	    --enable-tee \
	    --disable-gl
make
make DESTDIR=$PKG install
rm $PKG/usr/lib/*.la
rm $PKG/usr/lib/cairo/*.la
} 
uptodate() {
local url ext

url="https://www.cairographics.org/releases/"
ext=".tar.xz"
lynx -read_timeout=20 -dump -listonly -nonumbers \
$url|grep $name-[0-9]|grep $ext$|sed "s@$url$name-@@"|sed "s@$ext@@"|tail -1
}
