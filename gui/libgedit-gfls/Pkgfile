description='A module dedicated to file loading and saving.'
url='https://github.com/gedit-technology/libgedit-gfls'

license="LGPL3.0"

packager="spiky <spiky@nutyx.org>"
contributors=""

makedepends=(meson gobject-introspection gtk3)

name=libgedit-gfls
version=0.1.0

source=(https://github.com/gedit-technology/libgedit-gfls/releases/download/$version/$name-$version.tar.xz)

build() {
cd $name-$version

mkdir gfls-build
cd    gfls-build

meson setup .. \
       --prefix=/usr          \
       --buildtype=release    \
       -Dgtk_doc=false

ninja

DESTDIR=$PKG ninja install

install -Dm644 ../LICENSES/LGPL-3.0-or-later.txt $PKG/usr/share/licenses/$name/LGPL-3.0-or-later.txt
}
