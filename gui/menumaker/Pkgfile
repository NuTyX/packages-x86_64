description="MenuMaker is a menu generation utility for X window managers on *NIX systems. "
url="http://menumaker.sourceforge.net/"

packager="spiky <spiky@nutyx.org>"

makedepends=(python)
run=(python)

name=menumaker
version=0.99.13
downloadUrl=https://sourceforge.net/projects/menumaker/files/menumaker-$version.tar.gz/download

build() {
curl -Lo $name-$version.tar.gz $downloadUrl
tar xvf $name-$version.tar.gz
cd $name-$version
./configure --prefix=$PKG/usr
make
make install || true
}
