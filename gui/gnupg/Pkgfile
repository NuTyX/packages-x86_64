description="Complete and free implementation of the OpenPGP standard"
url="http://www.gnupg.org/"

packager="spiky <spiky@nutyx.org>"
contributors="Pierre,Tnut"

makedepends=(texinfo npth libgpg-error libgcrypt libassuan libksba
             openldap libusb-compat curl)
run=(pinentry)


name=gnupg
version=2.2.29

source=(https://gnupg.org/ftp/gcrypt/gnupg/gnupg-$version.tar.bz2)

build() {
cd gnupg-$version

sed -e '/noinst_SCRIPTS = gpg-zip/c sbin_SCRIPTS += gpg-zip' \
    -i tools/Makefile.in

./configure --prefix=/usr \
--enable-symcryptrun      \
--enable-maintainer-mode  \
--docdir=/usr/share/doc/gnupg-$version
make

makeinfo --html --no-split -o doc/gnupg_nochunks.html doc/gnupg.texi
makeinfo --plaintext -o doc/gnupg.txt doc/gnupg.texi

make DESTDIR=$PKG install

install -v -m755 -d \
$PKG/usr/share/doc/gnupg-$version/html
if [ -f doc/gnupg_nochunks.html ];then
	install -v -m644 doc/gnupg_nochunks.html \
	$PKG/usr/share/doc/gnupg-$version/gnupg.html
fi
install -v -m644 doc/*.texi doc/gnupg.txt \
$PKG/usr/share/doc/gnupg-$version
}
uptodate() {
local url ext

url="https://gnupg.org/download/index.html"
ext=".tar.bz2"
lynx -read_timeout=20 -dump -listonly -nonumbers \
$url|sort|grep /$name-[0-9]|grep $ext$|sed "s@$url$name-@@"|sed "s@$ext@@"
}
