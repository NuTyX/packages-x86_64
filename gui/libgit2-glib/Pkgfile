description="GLib wrapper for libgit2"
url="https://wiki.gnome.org/Projects/Libgit2-glib"

license="LGPL2.1"

packager="spiky <spiky@nutyx.org>"
contributors="DocWOPR,Tnut"

makedepends=(gobject-introspection glib libgit2 meson python-gobject
             vala git )
run=()
set=()

name=libgit2-glib
version=1.2.0

source=(https://download.gnome.org/sources/$name/1.2/$name-$version.tar.xz)

build() {

cd $name-$version

mkdir build
cd    build

meson setup .. \
       --prefix=/usr          \
            --buildtype=release

ninja

DESTDIR=$PKG ninja install

install -Dm644 ../COPYING $PKG/usr/share/licenses/$name/COPYING
}

package() {
  # strip $PKG from embedded paths:
  python -m compileall -d /usr/lib $PKG/usr/lib
  python -O -m compileall -d /usr/lib $PKG/usr/lib

}
