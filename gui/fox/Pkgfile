description="C++ based class library for building Graphical User Interfaces"
url="http://www.fox-toolkit.org/"

maintainer="Jeroen van de Zijp <jeroen at fox-toolkit dot com>"
packager="spiky <spiky@nutyx.org>"
contributors="Pierre,Tnut"

makedepends=(xorg-libxcursor xorg-libxft xorg-libxrandr xorg-libxxf86vm mesa cups xorg-glu)

name=fox
version=1.6.58

source=(http://fox-toolkit.org/ftp/$name-$version.tar.gz)

build() {
	cd $name-$version
	./configure --prefix=/usr \
	--mandir=/usr/share/man \
	--with-xft=yes \
	--with-opengl=yes
	make
	make DESTDIR=$PKG install
# Obsolets libs
rm $PKG/usr/lib/libCHART-1.6.la
rm $PKG/usr/lib/libFOX-1.6.la

}
