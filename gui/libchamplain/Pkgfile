# Depends on: clutter-gtk libsoup cairo sqlite gobject-introspection

description="Gtk3 widget for displaying rasterized maps"
url="http://projects.gnome.org/libchamplain/"
packager="jayce <jayce.net@gmail.com>"
contributors="Tnut"

name=libchamplain
version=0.12.16
release=2

source=(https://download.gnome.org/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
	cd $name-$version
	./configure --prefix=/usr --disable-static --disable-debug --enable-vala
	make
	make DESTDIR=$PKG install

# Obsolet lib
rm $PKG/usr/lib/libchamplain-0.12.la
rm $PKG/usr/lib/libchamplain-gtk-0.12.la
}
