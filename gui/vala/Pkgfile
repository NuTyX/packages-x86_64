description="Programming language which bring news features of languages of programming modern to developers GNOME"
url="http://live.gnome.org/Vala"

packager="tnut <tnut@nutyx.org>"
contributors="Pierre B, Rems"

makedepends=(glib graphviz libxslt help2man)

name=vala
version=0.48.9

source=(https://download.gnome.org/sources/vala/${version%.*}/$name-$version.tar.xz)

package() {
# Obsolets libs

rm $PKG/usr/lib/libvala{,doc}-0.48.la
rm $PKG/usr/lib/vala-0.48/libvalaccodegen.la
rm $PKG/usr/lib/valadoc-0.48/doclets/html/libdoclet.la
rm $PKG/usr/lib/valadoc-0.48/doclets/gtkdoc/libdoclet.la
rm $PKG/usr/lib/valadoc-0.48/doclets/devhelp/libdoclet.la
}

uptodate(){
local latest lastversion url
url="https://download.gnome.org/sources/$name"
latest="`lynx -read_timeout=20 -dump -listonly -nonumbers \
$url/?C=N\;O=D|grep [0-9]/$|head -1`"
lastversion="`lynx -read_timeout=20 -dump -listonly -nonumbers \
$latest/?C=N\;O=D|grep LATEST|grep [0-9]$|cut -d "-" -f3`"
echo "$lastversion"
}
