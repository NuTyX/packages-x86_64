description="Set of Javascript Bindings for GNOME"
url="http://www.gnome.org/"

packager="Spiky <spiky@nutyx.org>"
contributors="Pierre,Remy,Tnut,Spiky"

makedepends=(meson ninja cairo dbus-glib gobject-introspection js91 xorg-libxxf86vm)

name=gjs
version=1.72.0

source=(https://gitlab.gnome.org/GNOME/$name/-/archive/$version/$name-$version.tar.gz)
build() {
cd $name-$version

   mkdir gjs-build
   cd    gjs-build

   meson --prefix=/usr      \
         --buildtype release \
         -Dinstalled_tests=false \
         -Dprofiler=disabled ..

  ninja
  DESTDIR=$PKG ninja install
}



uptodate(){
local latest lastversion url
url="https://download.gnome.org/sources/$name"
latest="`lynx -read_timeout=20 -dump -listonly -nonumbers \
$url/?C=N\;O=D|grep [0-9]/$|head -1`"
lastversion="`lynx -read_timeout=20 -dump -listonly -nonumbers \
$latest/?C=N\;O=D|grep LATEST|grep [0-9]$|cut -d "-" -f3`"
echo "$lastversion"
}
