description="OpenType text shaping engine"
url="http://www.freedesktop.org/software/harfbuzz"

license="MIT"

packager="tnut <tnut@nutyx.org>"
contributors="Pierre,Remy,Spiky"

makedepends=(pkgconf cairo glib icu freetype gobject-introspection gtk-doc python-pygments)


name=harfbuzz
version=8.4.0
release=2

source=(https://github.com/harfbuzz/harfbuzz/releases/download/$version/$name-$version.tar.xz)

build() {
cd $name-$version

mkdir build
cd    build

meson setup ..          \
    --prefix=/usr       \
    --buildtype=release \
    --wrap-mode nodownload \
    -Dcpp_std=c++17      \
    -Dbenchmark=disabled \
    -Ddocs=disabled      \
    -Dtests=disabled     \
    -Dgraphite2=auto

ninja

DESTDIR=$PKG ninja install

install -Dm644 ../COPYING $PKG/usr/share/licenses/$name/COPYING
}
