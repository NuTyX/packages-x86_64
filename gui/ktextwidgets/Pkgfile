description="Advanced text editing widgets "
url="https://www.kde.org/"
packager="spiky <spiky@nutyx.org>"
contributors="Pierre B, tnut, fabienwang, spiky, fabienwang"

name=ktextwidgets
version=5.85.0
makedepends=(kcompletion kconfig kconfigwidgets ki18n kiconthemes
             kservice kwidgetsaddons kwindowsystem sonnet)
source=(https://download.kde.org/stable/frameworks/${version%.*}/${name}-$version.tar.xz)

build=kde5

uptodate() {
feed=https://github.com/KDE/$name/releases.atom 
exec="lynx -read_timeout=20 -dump -listonly -nonumbers $feed"
ligne=1 # nombre de notification ? afficher
$exec $feed | grep title | \
sed "s@<title>@@" | \
sed "s@</title>@@" | \
sed "s@v@@" | \
head -n $(($ligne+1 )) | \
tail -n $(($ligne))
}
