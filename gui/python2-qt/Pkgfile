# Depends on: python2-enum34 dbus-python python2-sip-qt5 sip qtbase qtmultimedia qttools qtwebkit qtconnectivity qtserialport qtsvg qtx11extras qtnetworkauth qtwebengine qtwebsockets qtxmlpatterns

description="connector python for qt"
url="http://www.riverbankcomputing.co.uk/software/pyqt/intro"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

name=python2-qt
version=5.12

source=(http://sourceforge.net/projects/pyqt/files/PyQt5/PyQt-$version/PyQt5_gpl-$version.tar.gz)
build() {
cd PyQt5_gpl-$version

python2 configure.py   \
     -v /usr/share/sip \
     -q /usr/bin/qmake \
     --confirm-license \
     --qsci-api \
     --no-sip-files

make
make -j1 DESTDIR=$PKG INSTALL_ROOT=$PKG install

mv "$PKG"/usr/bin/{,python2-}pyuic5
mv "$PKG"/usr/bin/{,python2-}pyrcc5

rm "$PKG"/usr/lib/qt/plugins/designer/libpyqt5.so
rm "$PKG"/usr/lib/qt/plugins/PyQt5/libpyqt5qmlplugin.so
rm "$PKG"/usr/share/qt/qsci/api/python/PyQt5.api
}
