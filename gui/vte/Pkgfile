description="Vte is a library (libvte) implementing a terminal emulator widget for GTK+ 3"
url="http://developer.gnome.org/arch/gnome/widgets/vte.html"

packager="spiky <spiky@nutyx.org>"
contributors="Greg, Pierre B, Jayce, tnut"

makedepends=(pcre2 gnutls vala gtk3 perl-xml-parser python2-gtk gobject-introspection)

name=vte
version=0.62.3

source=(https://download.gnome.org/sources/${name}/${version%.*}/${name}-$version.tar.xz)

build() {
cd ${name}-$version
mkdir build
cd    build

meson  --prefix=/usr \
--sysconfdir=/etc \
-Dfribidi=false

ninja

DESTDIR=$PKG ninja install
}
uptodate(){
local latest lastversion url
url="https://download.gnome.org/sources/${_name}"
latest="`lynx -read_timeout=20 -dump -listonly -nonumbers \
$url/?C=N\;O=D|grep [0-9]/$|head -1`"
lastversion="`lynx -read_timeout=20 -dump -listonly -nonumbers \
$latest/?C=N\;O=D|grep LATEST|grep [0-9]$|cut -d "-" -f3`"
echo "$lastversion"
}
