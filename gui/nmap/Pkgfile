description="Utility for network discovery and security auditing"
url="http://insecure.org/nmap/"

packager="tnut <tnut@nutyx.org>"
contributors="Pierre,Spiky"

makedepends=(python-setuptools python-build 
             python-gobject pcre lua libpcap liblinear)
run=()

name=nmap
version=7.95

source=(http://download.insecure.org/nmap/dist/$name-$version.tgz)

build() {
cd $name-$version
./configure --prefix=/usr \
--mandir=/usr/share/man \
--localedir=/usr/share/locale \
--docdir=/usr/share/doc/$name-$version \
--with-liblua=included \
--infodir=/usr/share/info
make || make -j1
make DESTDIR=$PKG install
}
