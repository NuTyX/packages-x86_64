description="xterm is a terminal emulator for the X Window System."
url="http://invisible-mirror.net/archives/xterm"
packager="spiky <spiky@nutyx.org>"
contributors="Pierre B, Greg, Remy"

alias=(xterm)
name=xorg-term
version=363
makedepends=(xorg-fontconfig xorg-libxft xorg-libxaw xorg-luit
             xorg-libxkbfile libutempter xorg-xbitmaps freetype)
run=(xorg-luit)

_name=xterm

source=($name-$version-color-1.patch
	https://invisible-mirror.net/archives/${_name}/${_name}-$version.tgz)

prepare() {
cd ${_name}-$version
patch -Np1 -i ../$name-$version-color-1.patch
sed -i '/v0/{n;s/new:/new:kb=^?:/}' termcap
printf '\tkbs=\\177,\n' >> terminfo
}

build() {
cd ${_name}-$version
#patch -Np1 -i ../$name-$version-color-1.patch
./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
            --mandir=/usr/share/man \
            --with-x \
            --disable-full-tgetent \
            --disable-imake \
            --enable-ansi-color \
            --enable-88-color \
            --enable-256-color \
            --enable-broken-osc \
            --enable-broken-st \
            --enable-load-vt-fonts \
            --enable-i18n \
            --enable-wide-chars \
            --enable-doublechars \
            --enable-warnings \
            --enable-tcap-query \
            --enable-logging \
            --enable-dabbrev \
            --enable-freetype \
            --enable-luit \
            --enable-mini-luit \
            --enable-narrowproto \
            --enable-exec-xterm \
            --enable-sixel-graphics \
            --enable-regis-graphics \
            --with-tty-group=tty \
            --with-utempter \
            --with-app-defaults=/etc/X11/app-defaults
make
}

package() {

cd ${_name}-$version
make DESTDIR=$PKG install

cat >> $PKG/etc/X11/app-defaults/XTerm << "EOF"
*VT100*locale: true
*VT100*faceName: Monospace
*VT100*faceSize: 10
*backarrowKeyIsErase: true
*ptyInitialErase: true
EOF

install -m755 -d $PKG/usr/share/applications
install -m644 {xterm,uxterm}.desktop $PKG/usr/share/applications/
}
