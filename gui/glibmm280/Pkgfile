description='The GLibmm package is a set of C++ bindings for GLib'
url='http://www.gtkmm.org'

packager="spiky <spiky@nutyx.org>"
contributors=""

makedepends=(git libsigc++-3 glib doxygen perl-xml-parser graphviz
             gtkmm4)

name=glibmm280
version=2.80.0

source=(https://gitlab.gnome.org/GNOME/glibmm/-/archive/$version/glibmm-$version.tar.gz)

prepare() {
  mv glibmm-$version $name-$version
}

build() {

cd $name-$version
mkdir bld
cd bld

meson setup .. \
       --prefix=/usr          \
       --buildtype=release    \
       -D maintainer-mode=true

ninja

DESTDIR=$PKG ninja install
}
