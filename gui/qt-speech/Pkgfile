# Depends on: qt-base speech-dispatcher 

description="A cross-platform application and UI framework, QtSpeech files"
url="http://qt-project.org/"
contributors="Pierre B"
packager="tnut <tnut@nutyx.org>"

name=qt-speech
version=5.9.1
release=1
alias=(qtspeech)
_name="${name/-/}-opensource-src"

source=(https://download.qt.io/official_releases/qt/5.9/$version/submodules/${_name}-${version}.tar.xz)

build() {
cd ${_name}-${version}
qmake
make
make INSTALL_ROOT=$PKG install

# Drop QMAKE_PRL_BUILD_DIR because reference the build dir
  find "$PKG/usr/lib" -type f -name '*.prl' \
       -exec sed -i -e '/^QMAKE_PRL_BUILD_DIR/d' {} \;
}
