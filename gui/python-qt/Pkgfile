description="connector python for qt"
url="http://www.riverbankcomputing.co.uk/software/pyqt/intro"

packager="spiky <spiky@nutyx.org>"
contributors="Pierre B, tnut"

makedepends=(sip python-dbus qtbase qtconnectivity qtmultimedia qttools
             qtserialport qtsvg qtx11extras qtnetworkauth
             qtwebkit qtwebsockets)


name=python-qt
version=5.15.4

source=(https://pypi.python.org/packages/source/P/PyQt5/PyQt5-$version.tar.gz)
build() {
cd PyQt5-$version

python3 configure.py   \
     -v /usr/share/sip \
     -q /usr/bin/qmake \
     --no-sip-files \
     --confirm-license \
     --qsci-api
make
make DESTDIR=$PKG INSTALL_ROOT=$PKG install -j1
}
