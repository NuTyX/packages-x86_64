# Depends on: vim db libcanberra gnome-online-accounts gnome-common gperf icu ninja libgdata libical libsecret libsoup nss libgweather vala gobject-introspection  kerberos gtk3 gtk-doc openldap

description="Programs that work with contacts, tasks, and calendar information"
url="http://www.gnome.org/"
packager="tnut <tnut@nutyx.org>"
contributors="Fanch, Tnut, Jayce, Remy"
name=evolution-data-server
version=3.30.5

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
cd $name-$version
cmake . -G Ninja \
      -DCMAKE_INSTALL_PREFIX=/usr   \
      -DENABLE_UOA=OFF              \
      -DENABLE_VALA_BINDINGS=ON     \
      -DENABLE_INSTALLED_TESTS=ON   \
      -DENABLE_GOOGLE=ON            \
      -DENABLE_GOOGLE_AUTH=OFF      \
      -DWITH_OPENLDAP=OFF           \
      -DWITH_KRB5=OFF               \
      -DENABLE_INTROSPECTION=ON
ninja
DESTDIR=$PKG ninja install
}
