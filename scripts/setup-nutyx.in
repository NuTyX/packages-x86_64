erase_nutyx() {
	local DIR REAL
	cd ${1}/boot
	if [ -d ${2}/home ];then
		mv ${2}/{home,.home}
	fi
	MAX=`ls *squashfs|wc -l`
	N=0
	(for i in *squashfs
	do
		DIR=`echo $i|cut -d "." -f1`
		[ "$DIR" == "root" ] && continue
		[ ! -z $DIR ] && rm -rf ${2}/${DIR}
		REAL=`calc $N/$MAX *100`
		PCT=${REAL%.*}
		echo "$PCT"
		N=$((N+1))
	done) |
  dialog --title "$(gettext "Erase") NuTyX" --gauge "$(gettext "Please wait") ..." 6 50
  $SETUP_LOG "setup-nutyx" "Erase NuTyX on ${PARTITION} done"
}
install_nutyx() {
	local DIR REAL FILE VERSNAME EXT
	setup_swap

	[ -d "$EFIVARS" ] && setup_esp

	cd ${1}/boot
	if [ -d ${2}/home ];then
		mv ${2}/{home,.home}
	fi
	MAX=`ls *squashfs|wc -l`
	N=0
	(for i in *squashfs
	do
		DIR=$(echo $i|cut -d "." -f1)
		rm -rfv ${2}/${DIR} &> /dev/tty2
		unsquashfs -f -n -d ${2}/${DIR} ${i} &> /dev/tty2
		REAL=$(calc $N/$MAX *100)
		PCT=${REAL%.*}
		echo "$PCT"
		N=$((N+1))
	done
	echo "92"
	rm -rfv ${2}/boot &> /dev/tty2
	chmod -v 750 ${2}/root &> /dev/tty2
	mkdir -v ${2}/boot &> /dev/tty2
	echo "$PARTITION   /    $FORMAT  defaults     0    0" >> /etc/fstab
	if [ -d "$EFIVARS" ]; then
		mkdir -p ${2}/boot/efi
		echo "efivarfs    /sys/firmware/efi/efivars    efivarfs    rw,nosuid,nodev,noexec,noatime 0 0" >> /etc/fstab
	else
		mkdir -pv ${2}/boot &> /dev/tty2
	fi

	for FILE in etc/profile.d/i18n.sh \
	etc/sysconfig/network \
	etc/sysconfig/clock \
	etc/hostname \
  etc/locale.conf \
	etc/adjtime \
	etc/cards.conf \
	etc/resolv.conf \
	etc/fstab \
	etc/localtime \
	etc/network \
	etc/mdadm.conf \
	$TEXTDOMAINFILE1 \
	$TEXTDOMAINFILE2 \
	$TEXTDOMAINFILE3 \
	$TEXTDOMAINFILE4
	do
		if [ -f /$FILE ] || [ -d /$FILE ] || [ -L /$FILE ];then
			mkdir -p $(dirname ${2}/$FILE)
			cp -av /$FILE  ${2}/$FILE &> /dev/tty2
		fi
	done
	if [ -f /etc/locale/locale-archive ]; then
		rm -fv ${2}/usr/lib/locale &> /dev/tty2
		cp -av /etc/locale ${2}/usr/lib/ &> /dev/tty2
	fi
	# Kernels
	cp -av ${1}/boot/kernel* ${2}/boot/ &> /dev/tty2
	for i in /lib/modules/*
	do
		VERSNAME="$(basename $i)"
		EXT="-${VERSNAME/*-/}"
		[ "$EXT" == "-NuTyX" ] && EXT=""
		ln -svf kernel-${VERSNAME} ${2}/boot/kernel${EXT} &> /dev/tty2
	done
	if  [ -f ${1}/boot/grub/splash.png ]; then
		mkdir -pv ${2}/boot/grub/ &> /dev/tty2
		cp -v ${1}/boot/grub/splash.png ${2}/boot/grub/ &> /dev/tty2
	fi
	if [ -f ${1}/boot/grub/fonts/unicode.pf2 ]; then
		mkdir -pv ${2}/boot/grub/fonts &> /dev/tty2
		cp -v ${1}/boot/grub/fonts/unicode.pf2 ${2}/boot/grub/fonts &> /dev/tty2
	fi
	for DIR in proc sys dev srv mnt tmp
	do
		[ ! -d ${2}/$DIR ] &&	mkdir -v ${2}/$DIR &> /dev/tty2
	done
	[ -a ${2}/dev/console ] || mknod -m 640 ${2}/dev/console c 5 1 &> /dev/tty2
	[ -a ${2}/dev/null ] || mknod -m 664 ${2}/dev/null    c 1 3 &> /dev/tty2
	chmod -v 1777 ${2}/tmp &> /dev/tty2
	echo "100") |
	dialog --title "$(gettext "Install NuTyX")" --gauge "$(gettext "Please wait") ..." 6 50
	$SETUP_LOG "setup-nutyx" "Install NuTyX on ${PARTITION} done"
	if [ -f /var/log/install.log ]; then
		cp -a /var/log/install.log  ${2}/var/log/install.log
	fi
}
setup_erase() {
	local MF retval
	retval=""
	if [ "$CHECK_HD_OK" == "no" ]; then
		check_available_disk
		[ "$CHECK_HD_OK" == "no" ] && return
	fi
	if [ "$CHECK_PART_OK" == "no" ]; then
		check_available_partition
		[ "$CHECK_PART_OK" == "no" ] && return
	fi
	echo "PARTITION=$PARTITION" > /dev/tty2
	echo "CHECK_SINGLE_PARTITION=$CHECK_SINGLE_PARTITION" > /dev/tty2
	[ "$CHECK_SINGLE_PARTITION" == "no" ] && unset PARTITION
	if [ -z $PARTITION ]; then
		select_partition "$(gettext "Erase") NuTyX"
		[ "$PARTITION" == "no" ] && return
	fi
	echo "PARTITION=$PARTITION" > /dev/tty2
	SETUP_INSTALL="no"
	MF=/mnt/hd
	mkdir -p $MF
	mount $PARTITION $MF || error "$(gettext "mounting") $PARTITION"
	if [ -d /media/cdrom/boot ]; then
		erase_nutyx "/media/cdrom" "$MF"
	else
		erase_nutyx "/" "$MF"
	fi
	umount $PARTITION
}
setup_install() {
	local MF retval
	retval=""
  if [ "$CHECK_HD_OK" == "no" ]; then
    check_available_disk
    [ "$CHECK_HD_OK" == "no" ] && return
  fi
  if [ "$CHECK_PART_OK" == "no" ]; then
    check_available_partition
    [ "$CHECK_PART_OK" == "no" ] && return
  fi
	echo "PARTITION=$PARTITION" > /dev/tty2
	echo "CHECK_SINGLE_PARTITION=$CHECK_SINGLE_PARTITION" > /dev/tty2
	[ "$CHECK_SINGLE_PARTITION" == "no" ] && unset PARTITION
	if [ -z $PARTITION ]; then
		select_partition "$(gettext "Install NuTyX")"
		[ "$PARTITION" == "no" ] && return
	fi
	echo "PARTITION=$PARTITION" > /dev/tty2
	if [ "$CHECK_PART_OK" == "new" ]; then
		mkfs.ext4 -F $PARTITION > /dev/tty2 || error "mkfs.ext4 $PARTITION"
		$SETUP_LOG "setup-nutyx" "mkfs.ext4 -F $PARTITION"
	fi
	FORMAT=`print_file_system $PARTITION`
	echo "FORMAT=$FORMAT" > /dev/tty2
	if [ "$FORMAT" == "no" ]; then
		setup_format
		[ "$FORMAT" == "no" ] && return
	fi
	SETUP_INSTALL="no"
	MF=/mnt/hd
	mkdir -p $MF
	mount $PARTITION $MF || error "$(gettext "mounting") $PARTITION"
	if [ -d /media/cdrom/boot ]; then
		# Installing from ISO
		install_nutyx "/media/cdrom/" "$MF"
	else
		# Installing from Maintenance this means
		# TODO the initrd has to be rebuild at configuration time
		install_nutyx "/" "$MF"
	fi
	umount $PARTITION
	SETUP_INSTALL="yes"
	echo "$PARTITION" > /root/boot
	echo "$PARTITION" > $TMP/boot
	if [ ! -d "$EFIVARS" ];then
		dialog --title "   $(gettext "Configuration of the boot of the computer") (GRUB)   " \
		--yesno "$(gettext "Configure the boot of the PC") ? " 0 0
		retval=$?
		case $retval in
			0)
				setup_grub;;
		esac
	else
		FORMAT="no"
		[ ! -z $EFI_SYS_PART ] && FORMAT=`print_file_system $EFI_SYS_PART`
		if [ "$FORMAT" == "vfat" ];then
			dialog --title " $(gettext "Choose your favorite Boot Manager") " \
				--menu "$(gettext "Grub, Efibootmgr or nothing"): $result" 15 60 3 \
				"Grub" "$(gettext "Advanced Linux Kernel boot manager")" \
				"Efibootmgr" "$(gettext "Classic boot tool")" \
				"Nothing" "$(gettext "To use the one used on other distro")" 2>$TMP/boot_choice
		        retval=$?
		        boot_choice=`cat $TMP/boot_choice`
	        	case $retval in
				0|2)
					case $boot_choice in
						Grub)
							setup_grub "efi" "$MF";;
						Efibootmgr)
							setup_efibootmgr "/media/cdrom" "$MF";;
						Nothing)
							continue;;
					esac
				;;
				1|2544)
					break
				;;
			esac
		else
			dialog --title "   Oups !!!  " \
			--msgbox "    $(gettext "This installation won't boot again ...")" 6 60
		fi
	fi
}
setup_efibootmgr() {
	local SPNR OPTIONS
	mount $PARTITION ${2}
	OPTIONS=$(cat /proc/cmdline|sed "s@BOOT_IMAGE=/boot/kernel\ @@")
	SPNR=$(echo $PARTITION|sed "s@^/dev/[a-z]*@@")
	mount -t efivarfs efivarfs /sys/firmware/efi/efivars
	mkdir -p ${2}/boot/efi
	mount "$EFI_SYS_PART" ${2}/boot/efi
	mkdir -p ${2}/boot/efi/EFI/BOOT/$SPNR
	rm ${2}/boot/efi/EFI/BOOT/$SPNR/* 2>/dev/null
	for i in /lib/modules/*
	do
		j=$(basename $i)
		ke=-$(echo $j|cut -d "-" -f3)
		[ ${#ke} == 1 ] && ke=""
		mv ${2}/boot/kernel-$j \
		${2}/boot/efi/EFI/BOOT/$SPNR/kernel$ke.efi
		ln -sf efi/EFI/BOOT/$SPNR/kernel$ke.efi ${2}/boot/kernel-$j
		ln -sf efi/EFI/BOOT/$SPNR/kernel$ke.efi ${2}/boot/kernel$ke
		efibootmgr -c -L "NuTyX Linux kernel$ke Quiet on $PARTITION" -d "$DISK" -l "\EFI\BOOT\\$SPNR\kernel$ke.efi" -u "root=$PARTITION $OPTIONS" || \
		dialog --title "   Oups !!!  " \
		--msgbox "    $(gettext "This installation won't boot again ...")" 6 60
	done
	umount "$EFI_SYS_PART"
	umount $PARTITION
}
