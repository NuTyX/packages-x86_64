_msgfmt() {
	local L C TD
	TD=$(mktemp -d)
	L=`echo ${1}|cut -d "_" -f1`
	C=`echo ${1}|cut -d "_" -f2`
	echo "group ${L}" >> ${CARDS}
	localedef --delete-from-archive de_CH.utf8
	localedef -i ${1} -f UTF-8 ${1}.UTF-8
	if [ -f /lib/services/setup-nutyx/setup-nutyx.locales.gz ];then
		bsdtar -xf /lib/services/setup-nutyx/setup-nutyx.locales.gz \
		-C $TD lib/setup-nutyx.${L} lib/xdg-user-dirs.${L} \
		lib/dialog.${L} lib/util-linux.${L}
	fi
	if [ -f $TD/lib/setup-nutyx.${L} ]; then
		TEXTDOMAINFILE1=$TEXTDOMAINDIR/${L}/LC_MESSAGES/setup-nutyx.mo
		mkdir -p $TEXTDOMAINDIR/${L}/LC_MESSAGES
		msgfmt $TD/lib/setup-nutyx.${L} \
		-o $TEXTDOMAINFILE1
	fi
	if [ -f $TD/lib/xdg-user-dirs.${L} ]; then
		TEXTDOMAINFILE2=$TEXTDOMAINDIR/${L}/LC_MESSAGES/xdg-user-dirs.mo
		mkdir -p $TEXTDOMAINDIR/${L}/LC_MESSAGES
		msgfmt $TD/lib/xdg-user-dirs.${L} \
		-o $TEXTDOMAINFILE2
	fi
	if [ -f $TD/lib/dialog.${L} ]; then
		TEXTDOMAINFILE3=$TEXTDOMAINDIR/${L}/LC_MESSAGES/dialog.mo
		mkdir -p $TEXTDOMAINDIR/${L}/LC_MESSAGES
		msgfmt $TD/lib/dialog.${L} \
		-o $TEXTDOMAINFILE3
	fi
	if [ -f $TD/lib/util-linux.${L} ]; then
		TEXTDOMAINFILE4=$TEXTDOMAINDIR/${L}/LC_MESSAGES/util-linux.mo
		mkdir -p $TEXTDOMAINDIR/${L}/LC_MESSAGES
		msgfmt $TD/lib/util-linux.${L} \
		-o $TEXTDOMAINFILE4
	fi
	echo "export LANG=${1}.utf-8" > ${LOCALE}
	echo "LANG=${1}.utf-8" > ${LOCALECONF}
	$SETUP_LOG "setup-nutyx --config-lang" "variable LANG=${1}.utf-8 saved in ${LOCALE}"
}
