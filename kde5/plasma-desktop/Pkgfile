# Depends on: baloo breeze xdg-utils polkit-kde-agent-1 systemsettings krunner kitemmodels kemoticons kcmutils kdeclarative kxmlgui knewstuff knotifications knotifyconfig kpeople kdbusaddons kactivities-stats kdesignerplugin kpackage ibus

description="KDE Plasma Desktop "
url="https://www.kde.org/"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

run=(desktop-file-utils xdg-utils)

name=plasma-desktop
version=5.15.2
release=2

source=(https://download.kde.org/stable/plasma/$version/$name-$version.tar.xz)

build=kde5

uptodate() {
feed=https://github.com/KDE/$name/releases.atom 
exec="lynx -read_timeout=20 -dump -listonly -nonumbers $feed"
ligne=1 # nombre de notification ? afficher
$exec $feed | grep title | \
sed "s@<title>@@" | \
sed "s@</title>@@" | \
sed "s@v@@" | \
head -n $(($ligne+1 )) | \
tail -n $(($ligne))
}
