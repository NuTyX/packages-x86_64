# Depends on: lmdb attr kauth kconfig kcoreaddons kcrash kdbusaddons kfilemetadata ki18n kidletime kio solid hicolor-icon-theme xdg-utils

description="A framework for searching and managing metadata"
url="https://www.kde.org/"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

run=(xdg-utils)

name=baloo
version=5.55.0

source=(http://download.kde.org/stable/frameworks/${version%.*}/${name}-$version.tar.xz)

build=kde5

uptodate() {
feed=https://github.com/KDE/$name/releases.atom 
exec="lynx -read_timeout=20 -dump -listonly -nonumbers $feed"
ligne=1 # nombre de notification ? afficher
$exec $feed | grep title | \
sed "s@<title>@@" | \
sed "s@</title>@@" | \
sed "s@v@@" | \
head -n $(($ligne+1 )) | \
tail -n $(($ligne))
}
