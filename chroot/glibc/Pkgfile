version=2.31
source=(http://ftp.gnu.org/gnu/glibc/glibc-$version.tar.xz)

build()
{
cd glibc-$version
mkdir -v build
cd build


../configure  \
      --prefix=/tools                    \
      --host=$LFS_TARGET                 \
      --build=$(../scripts/config.guess) \
      --enable-kernel=3.2                \
      --with-headers=/tools/include

make

make install

echo 'main(){}' > dummy.c
$LFS_TARGET-gcc dummy.c
echo $(readelf -l a.out | grep ': /tools')
rm -v dummy.c a.out
}
