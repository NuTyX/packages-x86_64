version=6.2.0
source=(\
http://ftp.gnu.org/gnu/gcc/gcc-$version/gcc-$version.tar.bz2 )

build()
{
cd  gcc-$version
mkdir -pv build
cd build

../libstdc++-v3/configure           \
    --host=$LFS_TARGET              \
    --prefix=/tools                 \
    --disable-multilib              \
    --disable-nls                   \
    --disable-libstdcxx-threads     \
    --disable-libstdcxx-pch         \
    --with-gxx-include-dir=/tools/$LFS_TARGET/include/c++/$version
make
make install
}
