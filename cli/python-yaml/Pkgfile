description="Python bindings for YAML, using fast libYAML library"
url="http://pyyaml.org/wiki/PyYAML"

packager="tnut <tnut@nutyx.org>"
contributors=""

alias=(PyYAML)

makedepends=(yaml cython)

name=python-yaml
version=6.0.1

_name=PyYAML

PKGMK_KEEP_SOURCES="no"
source=(731.patch
        https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz)

prepare() {
 cd PyYAML-$version
 patch -Np1 -i $SRC/731.patch
}

build() {
cd PyYAML-$version

python setup.py --with-libyaml build
python setup.py --with-libyaml install --prefix=/usr --root=$PKG --optimize=1
}
