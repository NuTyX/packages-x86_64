description="Small and modern C++ library for Filezilla" 
url="https://lib.filezilla-project.org/"

license="GPL2"

packager="spiky <spiky@nutyx.org>"
contributors="Greg,RÃ©my,Tnut"

makedepends=(gettext nettle gnutls libxcrypt)

name=libfilezilla
version=0.48.1

source=(
        https://dl4.cdn.filezilla-project.org/libfilezilla/libfilezilla-0.48.1.tar.xz)
build() {

cd $SRC/$name-$version
./configure --prefix=/usr \
--disable-static
make
make DESTDIR=$PKG install
# Obsolets libs
rm $PKG/usr/lib/libfilezilla.la

install -Dm644 COPYING $PKG/usr/share/licenses/$name/COPYING
}
