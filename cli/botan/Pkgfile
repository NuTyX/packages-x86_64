description='A C++ crypto library'
url='http://botan.randombit.net/'

packager="spiky <spiky@nutyx.org>"
contributors=""

makedepends=(gmp python)
run=()

name=botan
version=2.19.1

source=(https://botan.randombit.net/releases/Botan-$version.tar.xz)

build() {
cd Botan-$version

./configure.py \
    --prefix=/usr \
    --with-bzip \
    --with-zlib \
    --with-openssl

make
make DESTDIR=$PKG install
}
