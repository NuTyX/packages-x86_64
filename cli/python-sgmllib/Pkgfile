description="Port of sgmllib to Python3"
url="https://github.com/kurtmckee/feedparser"

packager="tnut <tnut@nutyx.org>"
contributors="RÃ©my"

makedepends=(python)

name=python-sgmllib
version=6.0.2

source=(https://github.com/kurtmckee/feedparser/archive/$version.tar.gz)

build() {

cd feedparser-$version

python3 /usr/lib/python3.8/compileall.py feedparser/sgml.py

install -Dm644 feedparser/sgml.py \
    "$PKG/usr/lib/python3.8/site-packages/sgml.py"

install -Dm644 feedparser/__pycache__/sgml.cpython-38.pyc \
    "$PKG/usr/lib/python3.8/site-packages/__pycache__/sgml.cpython-38.pyc"
  
}
