run=(python-setuptools)

name=python-pillow
version=5.1.0

source=(https://files.pythonhosted.org/packages/source/P/Pillow/Pillow-$version.tar.gz)

build(){
cd Pillow-$version
python3 setup.py build
python3 setup.py install --root=$PKG --optimize=1
}
