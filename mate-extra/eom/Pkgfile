# Depends on: exempi gtk3 gtk-update-icon-cache libexif mate-desktop mate-icon-theme python2-gobject2 python2-gtk libpeas

description="An image viewing and cataloging program for MATE (GTK3 version)"
url="https://mate-desktop.org/"
packager="tnut <tnut@nutyx.org>"
contributors="fanch,tnut,jayce,greg"

name=eom
version=1.22.0

source=(http://pub.mate-desktop.org/releases/${version%.*}/$name-$version.tar.xz)

build() {

  cd $name-$version
   ./configure \
          --prefix=/usr \
          --localstatedir=/var \
          --with-librsvg \
          --enable-python
  make
  sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
  make DESTDIR=$PKG install

  # Obsolets libs
  rm $PKG/usr/lib/eom/plugins/libfullscreen.la
  rm $PKG/usr/lib/eom/plugins/libreload.la
  rm $PKG/usr/lib/eom/plugins/libstatusbar-date.la
  
}

uptodate() {
feed=https://github.com/mate-desktop/$name/releases.atom 
exec="lynx -read_timeout=20 -dump -listonly -nonumbers $feed"
ligne=1 # nombre de notification ? afficher
$exec $feed | grep title | \
sed "s@<title>@@" | \
sed "s@</title>@@" | \
sed "s@v@@" | sed "s@ @@g" | \
head -n $(($ligne+1 )) | \
tail -n $(($ligne))
}
